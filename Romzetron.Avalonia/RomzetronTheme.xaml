<Styles
    x:Class="Romzetron.Avalonia.RomzetronTheme"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--==================================================-->
    <!-- Style resources. -->
    <!--==================================================-->

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://Romzetron.Avalonia.Shared/Resources/BoxShadows.xaml" />
                <ResourceInclude Source="avares://Romzetron.Avalonia.Shared/Resources/FullPalette.xaml" />
                <ResourceInclude Source="ThemeResources.xaml" />
                <ResourceInclude Source="Strings/InvariantResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <!--==================================================-->
    <!-- Include all control styles. -->
    <!--==================================================-->

    <StyleInclude Source="Controls.xaml" />

</Styles>