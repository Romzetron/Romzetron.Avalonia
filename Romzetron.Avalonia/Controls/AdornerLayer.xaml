<ResourceDictionary
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:ClassModifier="internal">

    <!--==================================================-->
    <!-- AdornerLayer control theme. -->
    <!--==================================================-->

    <ControlTheme x:Key="{x:Type AdornerLayer}" TargetType="AdornerLayer">

        <!--==================================================-->
        <!-- DefaultFocusAdorner template. -->
        <!--==================================================-->

        <Setter Property="DefaultFocusAdorner">

            <!--==================================================-->
            <!-- Template. -->
            <!--==================================================-->

            <FocusAdornerTemplate>

                <!--==================================================-->
                <!-- Primary border. -->
                <!--==================================================-->

                <Border
                    BorderBrush="{DynamicResource AdornerBrush}"
                    BorderThickness="{DynamicResource AdornerThickness}"
                    CornerRadius="{DynamicResource AdornerCornerRadius}" />

            </FocusAdornerTemplate>

        </Setter>

    </ControlTheme>

</ResourceDictionary>