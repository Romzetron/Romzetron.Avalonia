        </StackPanel>

        <!--==================================================-->
        <!-- Cycle themes start/stop button. -->
        <!--==================================================-->

        <Button
            Grid.Row="13" Grid.Column="1"
            Command="{Binding ToggleCyclingThemes}"
            Margin="14,4,4,4"
            HorizontalAlignment="Stretch">

            <i:Interaction.Behaviors>
                <ia:DataTriggerBehavior Binding="{Binding RunTimer}" ComparisonCondition="NotEqual" Value="True">
                    <ia:ChangePropertyAction TargetObject="{Binding $self}" PropertyName="Content" Value="Start Cycling Themes" />
                </ia:DataTriggerBehavior>
                <ia:DataTriggerBehavior Binding="{Binding RunTimer}" ComparisonCondition="Equal" Value="True">
                    <ia:ChangePropertyAction TargetObject="{Binding $self}" PropertyName="Content" Value="Stop Cycling Themes" />
                </ia:DataTriggerBehavior>
            </i:Interaction.Behaviors>

        </Button>

