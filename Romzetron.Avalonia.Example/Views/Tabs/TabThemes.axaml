            Grid.Row="8" Grid.Column="0"
            Content="Amber"
            IsChecked="{Binding SelectedColorTheme, Converter={StaticResource ThemeConverter}, ConverterParameter={x:Static theme:ColorTheme.Amber}}"
            Margin="4"
